@model ImageViewModel

@{
    ViewData["Title"] = "Image Page";
    Layout = "_Layout";
}

<div class="rounded bg-light mb-2">
    <div class="mb-3 p-3">
        <div>
            <img src="@Model.Path" class="img-fluid main-img" alt=""/>
        </div>
        <div class="d-flex m-0 mb-2 mt-3">
            <div class="image-action-btn">
                <button class="image-action-btn border-0 rounded-pill"><i class="fa-regular fa-heart"></i> Сохранить</button>
            </div>
            <div class="image-action-btn">
                <button class="image-action-btn border-0 rounded-pill"><i class="fa-regular fa-share-from-square"></i> Поделиться</button>
            </div>
            <div class="image-action-btn">
                <button class="image-action-btn border-0 rounded-pill red">Загрузить</button>        
            </div>
        </div>
    </div>
</div>

<div class="rounded border blur-light p-2 row">
    <div class="border-end" style="width: 30%">
        <h6>Дата загрузки</h6>
        <p>@Model.UploadDate</p>
    </div>
    <div class="border-end" style="width: 30%">
        <h6>Автор</h6>
        <img src="@Model.Path" class="img-fluid photo photo-s-3" alt=""/> @Model.Owner.UserName
    </div>
    <div class="row p-2 m-0" style="width: 40%">
        <div class="rounded-pill blur-dark wh-0 m-w-2 me-2">
            tag
        </div>
        <div class="rounded-pill blur-dark wh-0 m-w-2 me-2">
            tag
        </div>
        <div class="rounded-pill blur-dark wh-0 m-w-2 me-2">
            tag
        </div>
        <div class="rounded-pill blur-dark wh-0 m-w-2">
            tag
        </div> 
    </div>
</div>

<div class="container blur text-blur comment shadow mb-3 pt-2 pb-2 rounded">
    <div class="commenter row border-bottom m-0">
        <div>
            <img src="/img/joke.jpg" asp-append-version="true" class="photo photo-s-3" alt=""/>
        </div>
        <div class="text-blur">
            Логин
        </div>
        <div class="text-blur ml-auto">
            Время написания комментария
        </div>
    </div>
