@using CollectIt.Database.Entities.Account

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CollectIt.MVC.View</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true"/>
    <link href="~/lib/fontawesome-free-6.0.0-web/css/all.css" rel="stylesheet">
</head>
<body class="h-100">

<header id="header">
    @await Html.PartialAsync("_Navbar")
</header>

<section id="banner">
    <form asp-action="GetImagesByName" method="get" class="input-group rounded-pill m-w-1 ms-6 me-6">
        <select class="btn btn-light w-1 rounded-start-1 rounded-end-0 p-2">
            <option selected="selected" value="@((int) ResourceType.Image)">Изображения</option>
        </select>
        <input name="q" type="text" class="form-control rounded-start-0 rounded-end-0"/>
        <button class="btn btn-light w-0 border rounded-end-1 rounded-start-0">Найти</button>
    </form>
</section>

<main role="main" class="h-100 pb-3 main d-flex justify-content-center">
    <div class="rounded shadow mx-6">
        @RenderBody()
    </div>
</main>
    

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - CollectIt.MVC.View - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>