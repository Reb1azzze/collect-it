@model CollectIt.MVC.View.Views.Shared.Components.ImageCards.ImageCardsViewModel
@{
    Layout = "_ImagesLayout";
    ViewData["Title"] = "Изображения";
}

<div class="h-100">
    <div class="w-100 my-6 h-25 justify-content-center align-items-center d-flex mb-3 mt-4">
        <vc:search-bar/>
    </div>
    <div class="d-flex flex-column mb-0 d-block">
        <div class="w-100 h-100 bg-light rounded">
            <div class="p-3 mih-1">
                <vc:image-cards images="@Model.Images"/>
            </div>
            <div class="d-flex justify-content-center mh-100">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="@(Model.PageNumber == 1 
                                                         ? "" 
                                                         : Url.Action("GetImagesByName", new {p = Model.PageNumber - 1, q = Model.Query}))">
                            previous
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="@(Model.Images.Count == Model.MaxImagesCount
                                                       ? Url.Action("GetImagesByName", new {p = Model.PageNumber + 1, q = Model.Query})
                                                       : "")">next</a>
                        @* @Html.ActionLink("next", "GetImagesByName", new {p = Model.PageNumber + 1, q = Model.Query}, new {@class = "page-link"}) *@
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>