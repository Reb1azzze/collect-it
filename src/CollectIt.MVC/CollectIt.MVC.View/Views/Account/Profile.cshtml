@model AccountViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "_ProfileLayout";
}

<div class="bg-light rounded shadow p-4 d-flex align-items-start text-dark text-black">
    <ul class="nav nav-pills flex-column border-right me-3" role="tablist">
        <li class="nav-item mb-1 rounded" title="Аккаунт" role="presentation">
            <a class="nav-link rounded active text-dark d-flex align-items-center" data-bs-toggle="pill" data-bs-target="#account">
                <i class="fas fa-xl fa-user-circle t-s-1  me-1"></i> Аккаунт
            </a>
        </li>
        <li class="nav-item mb-1 rounded" title="Подписки" role="presentation">
            <a class="nav-link rounded text-dark d-flex align-items-center" data-bs-toggle="pill" data-bs-target="#subscribes">
                <i class="fas fa-xl fa-users t-s-1 me-1"></i> Мои подписки
            </a>
        </li>
        <li class="nav-item mb-1 rounded" title="Настройки" role="presentation">
            <a class="nav-link rounded text-dark d-flex align-items-center" data-bs-toggle="pill" data-bs-target="#options">
                <i class="fas fa-xl fa-cogs t-s-1 me-1"></i> Настройки
            </a>
        </li>
        <li class="nav-item mb-1 rounded" title="Ресурсы" role="presentation">
            <a class="nav-link rounded text-dark d-flex align-items-center" data-bs-toggle="pill" data-bs-target="#recources">
                <i class="fas fa-xl fa-folder t-s-1 me-1"></i> Ресурсы
            </a>
        </li>
        <a class="nav-item" title="Выход" role="logout">
            <a asp-controller="Account" asp-action="LogOut" class="text-dark btn btn-danger">Выйти</a>
        </a>
    </ul>

    <div class="tab-content w-100">
        <div class="tab-pane fade active show" id="account" role="tabpanel">
            <div class="p-4">
                @await Html.PartialAsync("Account", new ProfileAccountViewModel()
                                                    {
                                                        Username = Model.UserName,
                                                        Email = Model.Email
                                                    })
            </div>
        </div>
        <div class="tab-pane fade" id="subscribes" role="tabpanel">
            <div class="p-4">
                @await Html.PartialAsync("Subscribtions", new AccountSubscriptionsViewModel()
                                                          {
                                                              Subscriptions = Model.Subscriptions.ToArray()
                                                          })
            </div>
        </div>
        <div class="tab-pane fade" id="options" role="tabpanel">
            <div class="p-4">
                @await Html.PartialAsync("Options")
            </div>
        </div>
        <div class="tab-pane fade" id="resources" role="tabpanel">
            <div class="p-4">
                @await Html.PartialAsync("Resources", new AccountSubscriptionsViewModel()
                {
                    Subscriptions = Model.Subscriptions.ToArray()
                })
            </div>
        </div>
    </div>
</div>