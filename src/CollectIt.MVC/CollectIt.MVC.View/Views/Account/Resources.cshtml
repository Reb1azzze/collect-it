@model CollectIt.MVC.View.ViewModels.AccountResourcesViewModel

<div class="d-flex justify-content-center">
    <table class="table table-hover">
        <thead>
        <tr>
            <th class="">№</th>
            <th>Название</th>
            <th>Дата покупки</th>
            <th>Тип ресурса</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var (resource, i) in Model.Resources
                                                .OrderBy(s => s.Date)
                                                .Select((s, i) => ( s, i )))
        {
            <tr onclick="window.location='../Musics/@resource.Id'" role="button">
            <td>
                    @(i + 1)
                </td>
                <td>
                    @resource.FileName
                </td>
                <td>
                    @resource.Date.ToString("D")
                </td>
                <td>
                    @if (resource.Extension == "jpg")
                    {
                        <div>Изображение</div>
                    }
                </td>
                <td>
                </td>
            </tr>
        }
        </tbody>
    </table></div>