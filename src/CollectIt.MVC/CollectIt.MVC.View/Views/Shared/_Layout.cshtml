<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CollectIt.MVC.View</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/View.styles.css" asp-append-version="true"/>
    <link href="~/lib/fontawesome-free-6.0.0-web/css/all.css" rel="stylesheet">
</head>
<body id="banner">

    <header id="header" class="reveal alt mb-6">
        @await Html.PartialAsync("_Navbar")
    </header>

    <form class="input-group rounded-pill m-w-1 ms-6 me-6 mt-6">
        <select class="btn btn-light w-1 rounded-start-1 rounded-end-0 p-2">
            <option>Изображения</option>
            <option>Музыка</option>
            <option>Видео</option>
        </select>
        <input type="text" class="form-control rounded-start-0 rounded-end-0"/>
        <button class="btn btn-light w-0 border rounded-end-1 rounded-start-0">Найти</button>
    </form>

@{
    IgnoreBody();
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>