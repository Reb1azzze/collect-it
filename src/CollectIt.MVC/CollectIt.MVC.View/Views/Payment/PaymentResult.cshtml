@model PaymentResultViewModel

@{
    Layout = "_PaymentLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="refresh" content="5;/">
    <title>Результат операции</title>
</head>
<body>
<div>
    @if (Model.Success)
    {
        <div>Поздравляем с оформлением подписки</div>
    }
    else
    {
        <div>Подписка не оформлена</div>
        <div>Причина: @Model.ErrorMessage</div>
    }
</div>
</body>
</html>