@page
@model CollectIt.MVC.View.Pages.Account.RegisterModel
@{
    Layout = "Account_Layout.cshtml";
}
<div class="registration">  
    <form>
        <h3 class="text-center">Регистрация</h3>
        <div class="form-group">
            <input class="form-control item" type="text" name="username" maxlength="15" minlength="4" pattern="^[a-zA-Z0-9_.-]*$" id="username" placeholder="Логин" required>
        </div>
        <div class="form-group">
            <input class="form-control item" type="password" name="Пароль" minlength="6" id="password" placeholder="Пароль" required>
        </div>
       <div class="form-group">
            <input class="form-control item" type="password" name="Пароль" minlength="6" id="password" placeholder="Подтверждение пароля" required>
        </div>
        <div class="form-group">
            <button class="create-account" type="submit">Зарегестрироваться</button>
        </div>
        <div class="form-group">
            <a href="Login">Есть аккаунт?</a>
        </div>
    </form>
</div>