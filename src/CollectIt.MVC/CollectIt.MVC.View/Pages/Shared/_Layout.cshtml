<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Main Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/View.styles.css" asp-append-version="true"/>
</head>
<body>
<header id="header" class="reveal alt">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow blur-dark p-0">
        <div class="container m-w-0 m-0 ms-4 me-4">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Collect It</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item me-4">
                        @await Html.PartialAsync("Dropdowns/_ImagesDropdown")
                    </li>
                    <li class="nav-item me-4">
                        @await Html.PartialAsync("Dropdowns/_MusicDropdown")
                    </li>
                    <li class="nav-item">
                        @await Html.PartialAsync("Dropdowns/_VideoDropdown")
                    </li>
                </ul>
                <a class="nav-link text-center btn-light c-0 rounded-pill p-0 ps-3 pe-3 end-100 h-1" asp-area="" asp-page="/Login">Войти</a>
            </div>
        </div>
    </nav>
</header>

<section id="banner">
    <form class="input-group rounded-pill m-w-1 ms-6 me-6">
        <input type="text" class="form-control rounded-start-1 rounded-end-0"/>
        <button class="btn btn-light w-0 border rounded-end-1 rounded-start-0">Найти</button>
    </form>
</section>


<section id="ind" class="test-3">
    <main role="main" class="pb-3 main">
        <div class="test-4 rounded shadow">
            @RenderBody()
        </div>
    </main>
</section>


<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - CollectIt.MVC.View - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>